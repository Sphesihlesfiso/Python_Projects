<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Administration Page</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-LN+7fdVzj6u52u30Kp6M/trliBMCMKTyK833zpbD+pXdCLuTusPj697FH4R/5mcr"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="css/style.css" />
  </head>

  <body>
    <form
      class="d-flex flex-direction-column pt-3 bg-body-tertiary"
      method="POST"
    >
      <label for="imageUpload">Upload Image:</label>
      <input
        type="file"
        id="imageUpload"
        accept="image/*"
        onchange="previewImage(event)"
      />

      <br />
      <img
        id="bagPreview"
        src=""
        alt="Bag Preview"
        style="max-width: 300px; display: none"
      />

      <label for="Nameofbag">Name of Bag:</label>
      <input type="text" id="Nameofbag" name="Nameofbag" />

      <label for="Quantity">Quantity:</label>
      <input type="number" id="Quantity" name="Quantity" />

      <label for="Price">Price:</label>
      <input type="number" id="Price" name="Price" /><br />
      <input type="submit" name="Upload" />
    </form>
    <script>
      document
        .getElementById("imageUpload")
        .addEventListener("change", function () {
          const file = this.files[0];
          if (file) {
            document.getElementById(
              "fileNameDisplay"
            ).textContent = `Selected file: ${file.name}`;
          }
        });

      function previewImage(event) {
        const input = event.target;
        const preview = document.getElementById("bagPreview");

        if (input.files && input.files[0]) {
          const reader = new FileReader();

          reader.onload = function (e) {
            preview.src = e.target.result;
            preview.style.display = "block";
          };

          reader.readAsDataURL(input.files[0]);
        }
      }
    </script>

    <script
      src="/docs/5.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-ndDqU0Gzau9qJ1lfW4pNLlhNTkCfHzAVBReH9diLvGRem5+R9g2FzA8ZGN954O5Q"
      class="astro-vvvwv3sm"
    ></script>
    <script src="js/main.js"></script>
    <%- include("partials/footer") %>
  </body>
</html>
